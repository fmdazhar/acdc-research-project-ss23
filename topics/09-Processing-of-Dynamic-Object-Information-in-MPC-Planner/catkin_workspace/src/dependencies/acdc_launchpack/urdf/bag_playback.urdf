<?xml version="1.0"?>
<robot name="Passat_CC">

	<!-- Physical Material Macros -->
	<material name="red">
    		<color rgba="1.0 0.0 0.0 1.0"/>
	</material>
	<material name="black">
    		<color rgba="0.2 0.2 0.2 1.0"/>
	</material>
	<material name="blue">
    		<color rgba="0.0 0.0 1.0 0.5"/>
	</material>
	<material name="grey">
		<color rgba="0.5 0.5 0.5 1.0"/>
	</material>

    <link name="map">
		<visual>
			<origin rpy="0 0 1.57079632679" xyz="89 37 -0.1"/>
			<geometry>
				<mesh filename="package://acdc_launchpack/resources/rviz_meshes/teststrecke.dae" scale="1 1 1"/>
			</geometry>
			<material name="grey"/>
		</visual>
	</link>


	<joint name="map_joint" type="continuous">
    	<parent link="map"/>
    	<child link="base_link"/>
    	<origin rpy="0 0 0" xyz="0 0 0"/>
        <axis xyz="0 1 1"/>
    </joint>


	<!-- STL file Volkswagen Passat CC IKA -->
	<link name="base_link">
		<visual>
			<origin rpy="0 0 0" xyz="-1.10 0 0"/>
			<geometry>
				<mesh filename="package://acdc_launchpack/resources/rviz_meshes/passat_cc.stl" scale="1 1 1"/>
			</geometry>
			<material name="black"/>
		</visual>
	</link>


	<!-- Front left wheel -->
	<link name="recording_front_left_wheel_body">
		<visual>
			<origin rpy="0 0 -1.57079632679" xyz="0.35 0.85 1.88"/>
			<geometry>
				<mesh filename="package://acdc_launchpack/resources/rviz_meshes/tire_front.DAE" scale="1 1 1"/>
			</geometry>
		</visual>
	</link>

	<joint name="front_left_suspension" type="continuous">
    	<parent link="base_link"/>
    	<child link="recording_front_left_wheel_body"/>
    	<origin rpy="0 0 0" xyz="0 0 0"/>
        <axis xyz="0 1 1"/>
    </joint>

	<!-- Front right wheel -->
	<link name="recording_front_right_wheel_body">
		<visual>
			<origin rpy="0 0 1.57079632679" xyz="-0.35 -0.85 1.88"/>
			<geometry>
				<mesh filename="package://acdc_launchpack/resources/rviz_meshes/tire_front.DAE" scale="1 1 1"/>
			</geometry>
		</visual>
	</link>

	<joint name="front_right_suspension" type="continuous">
       	<parent link="base_link"/>
       	<child link="recording_front_right_wheel_body"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <axis xyz="0 1 1"/>
     </joint>

	<!-- Rear left wheel -->
	<link name="recording_rear_left_wheel_body">
		<visual>
			<origin rpy="0 0 1.57079632679" xyz="-0.35 -0.85 -0.93"/>
			<geometry>
				<mesh filename="package://acdc_launchpack/resources/rviz_meshes/tire_rear.DAE" scale="1 1 1"/>
			</geometry>
		</visual>
	</link>

    <joint name="rear_left_suspension" type="continuous">
       	<parent link="base_link"/>
       	<child link="recording_rear_left_wheel_body"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <axis xyz="0 1 1"/>
    </joint>

	<!-- Rear right wheel -->
	<link name="recording_rear_right_wheel_body">
		<visual>
			<origin rpy="0 0 -1.57079632679" xyz="0.35 0.85 -0.93"/>
			<geometry>
				<mesh filename="package://acdc_launchpack/resources/rviz_meshes/tire_rear.DAE" scale="1 1 1"/>
			</geometry>
		</visual>
	</link>

    <joint name="rear_right_suspension" type="continuous">
       	<parent link="base_link"/>
       	<child link="recording_rear_right_wheel_body"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <axis xyz="0 1 1"/>
    </joint>

</robot>

